            <div class="container">
                        <form action="/gen_conversion" method="POST">
                                <button type="submit" class="btn btn-primary">Conversion</button>
                        </form>
            </div>
            <form>
                
                <div class="form-group"> 
                    <label for="username">Username:</label>
                    <input type="number" id="username" placeholder="<%= Username %>">
                    <label for="username">Designation:</label>
                    <input type="number" id="designation" placeholder="<%= Designation %>">
