                    <p id="home_title">FOREX SYSTEM</p>
                </div>
                <div class="collapse navbar-collapse" id="bs-nav-demo">
                        <ul class="nav navbar-nav navbar-right">
                            <li id="login"><a href="/login.ejs" title="login">Logout</a></li>
                        </ul>
                </div>
            </div>
        </nav>
        <div class="container" id="form_container">
                <form action="/convertUser" method="POST">
                        <h3>Exchange Rate Calculator</h3>
                        <div name="fromcurr" class="form-group">
                          <label for="from">From:</label>
                          <select name="from" id="from">
                                <option value="" disabled selected><%= FromCurr %></option>
                                <option>Rupees</option>
                                <option>Dollar</option>
                          </select>
                        </div>
                        <div name="tocurr" class="form-group">
                                <label for="to">To:</label>
                                <select name="to" id="to">
                                      <option value="" disabled selected><%= ToCurr %></option>
                                      <option>Rupees</option>
                                      <option>Dollar</option>
                                </select>
                        </div>
                        <div class="text-center"> 
                        <button type="submit" class="btn btn-primary">Convert</button>
                        </div>
                        <div>
                                <label for="ex_rate">Exchange Rate:</label>
                                <input type="number" id="ex_rate" placeholder="<%= convertedVal %>"">
                        </div>
                </form>
        </div>
